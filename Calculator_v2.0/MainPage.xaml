<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator_v2._0.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Border StrokeShape="RoundRectangle 10,10,10,10" MinimumHeightRequest="300" MinimumWidthRequest="200" Padding="7">
                <Grid RowSpacing="5" ColumnSpacing="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Padding="10">
                        <Label Text="0" FontSize="20" TextColor="Black" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="1" Grid.Column="0"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="1" Grid.Column="1"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="1" Grid.Column="2"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="1" Grid.Column="3"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="2" Grid.Column="0"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="2" Grid.Column="1"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="2" Grid.Column="2"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="2" Grid.Column="3"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="3" Grid.Column="0"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="3" Grid.Column="1"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="3" Grid.Column="2"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="3" Grid.Column="3"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="4" Grid.Column="0"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="4" Grid.Column="1"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="4" Grid.Column="2"></Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10" Padding="10" Grid.Row="4" Grid.Column="3"></Border>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
